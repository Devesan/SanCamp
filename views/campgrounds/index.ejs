<% include ../partials/header%>
<div class="container pt-5" >
  <header class="jumbotron">
    <div class="container">
      <h1 class="display-4">Welcome to Sancamp! </h1>
      <p class="lead">View our handpicked campgrounds around the world</p>
      <hr class="my-4">
      <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campgrounds</a>
    </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(camp){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img class="img-thumbnail" src="<%= camp.image %>" style="width: 100%;height: 13vmax;object-fit: cover;position:relative;">
        <div class="card-body">
          <h5 class="card-title"> <%=camp.name %> </h5>
        </div>
        <p>
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More info</a>

        </p>
      </div>
    </div>
    <% }); %>
  </div>

</div>
<% include ../partials/footer%>
