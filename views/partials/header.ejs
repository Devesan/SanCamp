<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark"style="color:white;">

    <a class="navbar-brand " href="/ ">Sancamp</a>



    <div class="collapse navbar-collapse ">

      <ul class="nav navbar-nav ml-auto ">
        <% if(!currentUser){ %>
        <li class="nav-item" ><a href="/login" class="nav-link ">Login</a></li>

        <li class="nav-item "><a href="/register " class="nav-link ">Sign Up</a></li>
      <%  } else{ %>
        <li class="nav-item "><a href="# " class="nav-link ">Signed in as <%=currentUser.username%> </a></li>
        <li class="nav-item "><a href="/logout " class="nav-link ">Logout</a></li>
        <%  } %>
      </ul>

    </div>


  </nav>
  <% if(error && error.length >0){ %>
  <div class="container pt-4">
    <div class="alert alert-danger" role="alert"><%=error%>  </div>
  </div>
  <% } %>
  <% if(success && success.length >0){ %>
  <div class="container pt-4">
    <div class="alert alert-success" role="alert"><%=success%>  </div>
  </div>
  <% } %>
